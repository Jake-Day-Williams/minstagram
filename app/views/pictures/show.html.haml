#pic_show.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel.heading.pic_image
        = image_tag @picture.image.url
      .panel-body
        %h1= @picture.title
        %p= @picture.description
      .panel-footer
        .row
          .col-md-6
            %p.user
              by
              = @picture.user.email

          .col-md-6
            .btn-group.pull-right
              - if user_signed_in?
                = link_to "Back", root_path
                = link_to "Edit", edit_picture_path
                = link_to "Delete", picture_path, method: :delete, data: { confirm: "Really delete?" }, class: "btn btn-danger"
